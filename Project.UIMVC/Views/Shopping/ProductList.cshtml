@model ShoppingVM

@{
    ViewBag.Title = "ProductList";
}

<div class="jumbotron">
    @TempData["mesaj"]
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Urun İsmi</th>
            <th>Urun Fiyatı</th>
            
            <th>@Html.ActionLink("SepetSayfasi", "SepetSayfasi", null, new { @class = "btn btn-success" })</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Product item in Model.Products)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                
                <td> @Html.ActionLink("Sepete at", "AddToCart", new { id = item.ID }, new { @class = "btn btn-primary" })   </td>
            </tr>
        }
    </tbody>
</table>