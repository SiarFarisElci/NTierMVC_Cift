@model ShoppingVM

@{
    ViewBag.Title = "SepetSayfasi";
}

@Html.ActionLink("Alısverişe Devam" , "ProductList" , null , new {@class = "btn btn-primary"})
<h2>SepetSayfasi</h2>

@if (ViewBag.SepetBos != null)
{
    <h1 style="color:red;" > @ViewBag.SepetBos</h1>
}
else
	{
	<div class="jumbotron">
		Ödemeniz gereken tutar => @Model.Cart.TotalPrice.Value.. Siparişi onaylamak icin @Html.ActionLink("tıklayınız" , "SiparisOnayla") 
	</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Urun Ismi</th>
                <th>Urun Fiyatı</th>
                <th>Urun Adedi</th>
                <th>Ara Fiyat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CartItem item in Model.Cart.Sepetim)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Amount</td>
                    <td>@item.SubTotal $</td>
                    <td>@Html.ActionLink("Sepetten cıkar", "SepettenCikar", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>

	}