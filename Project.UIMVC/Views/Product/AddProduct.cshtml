@model ProductVM
@{
    ViewBag.Title = "AddProduct";
}

<h2>AddProduct</h2>

<div class="jumbotron">
    Urun ekleme Sayfası
</div>

<div class="container">
    <div class="panel panel-body">

        @using (Html.BeginForm())
        {

            <div>
                @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control", placeholder = "Lutfen urun ısmi giriniz" })
            </div>

            <br />

            <div>
                @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control", placeholder = "lutfen Fiyat Giriniz" })
            </div>

            <br />
            <div>
                @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Lutfen Seciniz", new { @class = "form-control" })
            </div>
            <br />

            <button class="btn btn-warning">
                Ekle
            </button>
        }
    </div>
</div>