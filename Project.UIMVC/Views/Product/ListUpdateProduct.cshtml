@model ProductVM
@{
    ViewBag.Title = "ListUpdateProduct";
}

<h2>ListUpdateProduct</h2>

<div class="jumbotron">

    Urun Listesi ,  urun listesini gormek istiyorsanız @Html.ActionLink("Tıklayınız", "ListProduct")
</div>


<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Urun ID</th>
                <th>Urun Adı</th>
                <th>Urun Fiyatı</th>
                <th>Urun Kategorisi</th>
              
            </tr>
        </thead>

        <tbody>
            @foreach (Product item in Model.Products)
            {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                @if (item.Category is null)
                {
                    <td>Kategorisi Yok</td>
                }
                else
                {
                    <td>@item.Category.CategoryName</td>
                }
            </tr>
            }
        </tbody>
    </table>



</div>