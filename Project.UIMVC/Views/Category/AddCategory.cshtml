@model CategoryVM

@{
    ViewBag.Title = "AddCategory";
}

<h2>AddCategory</h2>

<div class="jumbotron">
    Kategori Ekleme Sayfası
</div>

<div class="container">
    <div class="panel panel-body" >

        @using (Html.BeginForm())
            {
                <div>
                    @Html.TextBoxFor(x=> x.Category.CategoryName , new  { @class = "form-control" , placeholder = "Kategori Ismi giriniz" })
                </div>

                <br />

                <div>

                    @Html.TextBoxFor(x=> x.Category.Description , new {@class = "form-control" , placeholder = "Acıklama Giriniz" })
                </div>
                <br />

                <button class="btn btn-primary">
                    Ekle
                </button>

            }


    </div>
</div>